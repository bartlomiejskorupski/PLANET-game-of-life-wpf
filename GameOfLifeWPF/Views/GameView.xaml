<UserControl x:Class="GameOfLifeWPF.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOfLifeWPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="MinHeight" Value="40"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Generation" Grid.Column="0"/>
            <Label Content="Alive" Grid.Column="2"/>
            <Label Content="Died" Grid.Column="4"/>
            <Label Content="Born" Grid.Column="6"/>

            <TextBlock x:Name="GenerationTB" Text="{Binding GenerationText}" Grid.Column="0" Grid.Row="1"/>
            <TextBlock x:Name="AliveTB" Text="{Binding AliveText}" Grid.Column="2" Grid.Row="1"/>
            <TextBlock x:Name="DiedTB" Text="{Binding DiedText}" Grid.Column="4" Grid.Row="1"/>
            <TextBlock x:Name="BornTB" Text="{Binding BornText}" Grid.Column="6" Grid.Row="1"/>

        </Grid>
            
        <Canvas HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="GameCanvas" Grid.Column="1" Grid.Row="3" Loaded="GameCanvas_Loaded" SizeChanged="GameCanvas_SizeChanged"/>

        <Grid Grid.Column="1" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Button Content="Exit" Grid.Column="0" Grid.Row="2"/>
            <Button Content="Save" Grid.Column="0"/>

            <Button Content="Debug" Grid.Column="2" Grid.Row="2" Click="DebugButton_Click"/>

            <Button x:Name="PreviousButton" Content="&lt;" Grid.Column="6" Click="PreviousButton_Click"/>
            <Button x:Name="NextButton" Content="&gt;" Grid.Column="8" Click="NextButton_Click"/>
            <Button Content="Auto" Grid.Column="8" Grid.Row="2"/>
        </Grid>
    </Grid>
</UserControl>
